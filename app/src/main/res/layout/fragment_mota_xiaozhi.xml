            android:text="@string/xiaozhi_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="79dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
